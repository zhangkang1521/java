<script type="text/javascript">
//开户
function openaccount(userType){
	if(userType == 2) {
		window.location.href="/account/myAccount/openAccount";
	} else if(userType == 1) {
		layer.load('实名认证中...', 3);
		$.ajax({
	    	url:'/Verification/json/Verification.json',
	        type:'post',
	        async:false,
	        data:{"flag":"8"},
	        success: function(data){
	            if(data.success){
	         		window.location.href=data.redirectUrl;
	            }else {
	            	layer.alert(data.message);
	            }
	        },
	        error : function(){
	            alert("通信异常！");
	        }
		});
// 		window.location.href="/account/myAccount/openAccount";
	}
}
//授权
function authorize(){
	$.ajax({
    	url:'/Verification/json/CheckMoneyMoreMore.json',
         type:'post',
         async:false,
         data:{"id":"4"},
         success: function(data){
             if(data.success){
          		window.location.href="/account/myAccount/authorize";
             }else {
            	 layer.alert(data.message,2,function(){
 		    		window.location.href=data.redirectUrl;
 		    		});
             }
         },
         error : function(){
             alert("通信异常！");
         }
 });
}
</script>
