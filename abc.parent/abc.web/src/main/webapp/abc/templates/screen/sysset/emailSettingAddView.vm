<script src="/Js/sysset/SystemParameterAddView.js"></script>
<form id="Colyn">
    <table cellpadding="0" cellspacing="0" class="grid removeMinwidth gridBorder0">
        <input type="hidden" name="sys_email_id" value=""/>
        <tbody>
            <tr>
                <td colspan="3" class="lefts">
                    <ul>
                        <li class="fl ml10 icon-bi">邮箱设置</li>
                        <li class="fr mr20"><a href="javascript:;" class="sjtop folding2"></a></li>
                    </ul>
                    <div class="clear"></div>
                </td>
            </tr>
            <tr>
                <td>SMTP服务器</td>
                <td class="rightTD">
                    <input type="text" name="sys_smtp" class="text-input easyui-validatebox w170" data-options="required:false,validType:['URL']" value="$!vo.sys_smtp"/>
                </td>
            </tr>
            <tr>
                <td>端口号</td>
                <td class="rightTD">
                    <input type="text" name="sys_port" class="text-input easyui-validatebox w170"  value="$!vo.sys_port"/>
                </td>
            </tr>
            <tr>
                <td>邮箱地址</td>
                <td class="rightTD">
                    <input type="text" name="sys_email_address" class="text-input easyui-validatebox w170" data-options="required:false,validType:['Email']" value="$!vo.sys_email_address"/>
                </td>
            </tr>
            <tr>
                <td>邮箱密码</td>
                <td class="rightTD">
                    <input type="password" name="sys_email_pwd" class="text-input easyui-validatebox w170" data-options="required:false" value="$!vo.sys_email_pwd"/>
                </td>
            </tr>
             <tr>
                <td>发件人昵称或姓名</td>
                <td class="rightTD">
                    <input type="text" name="sys_send_name" class="text-input easyui-validatebox w170" data-options="required:false,validType:['length[0,20]']" value="$!vo.sys_send_name"/>
                </td>
            </tr>
        </tbody>
    </table>
       

     <div class="btn-div"><a href="#" id="btnUpdateEmail"  class="btns btns-primary">确认修改</a></div>
</form>
