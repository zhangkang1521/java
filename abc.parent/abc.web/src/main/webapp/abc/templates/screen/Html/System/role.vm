<link href="/Css/Page.css" rel="stylesheet" type="text/css" />
<form id="Colyn">
    <input type="hidden" id="rol_Id" name="roleId" />
    <input type="hidden" id="rRolName" />
    <table cellpadding="0" cellspacing="0" class="grid removeMinwidth">
        <tr>
            <td class="leftTD">角色名称：</td>
            <input id="validname" type="hidden" value="" />
            <td class="rightTD"><input type="text" id="rol_Name" name="roleName"  class="easyui-validatebox text-input" data-options="required:true,validType:['length[0,20]']" missingMessage ="请输入角色名称！" /></td>
        </tr>            
        <tr>
            <td class="leftTD">排序：</td>
            <td class="rightTD"><input type="text" id="rol_Sort" name="roleSort" required="true"  class="easyui-numberbox text-input" value="0" missingMessage="必填" MaxLength="4" /></td>
        </tr>
          <tr>
            <td class="leftTD">描述：</td>
            <td class="rightTD">
                <textarea  id="rol_Note" name="roleNote" class="text-input easyui-validatebox" data-options="validType:['length[0,50]']" cols="35" rows="6" style="margin:5px 0" ></textarea>
            </td>
        </tr>       
        <tr>
            <td class="leftTD">默认角色：</td>
            <td class="rightTD"><input type="checkbox" id="rol_IsDefault"  name="roleDefault" value="1" /></td>
        </tr>   
    </table>   
</form>
