        <tr>
            <td class="leftTD">名称：</td>
            <td class="rightTD"><input type="text" id="WFT_Name" name="WFT_Name"  class="easyui-validatebox" data-options="required:true" missingMessage ="请输入名称！" /></td>
        </tr>           
