<div id="layout">
    <div region="center" title="文章管理" iconcls="icon-users" class="regionCenter">
        <div class="SearchForm hideClass" id="SearchForm">
            <form>
                <fieldset>
                    <legend class="ml10">信息查询</legend>
                    <div class="clearfloat search-wrap">
                        <ul class="fl search-width">
                            <li>
                                <span>文章标题：</span>
                                <span>
                                    <input type="text" id="sys_article_title" name="sys_article_title" class="text-input ipt-w80" _method="Contains"/></span>
                            </li>
                            <li>
                                <span>发布日期：</span>
                                <span>
                                    <input type="text" class="easyui-datebox w95 easyui-validatebox" id="id1"  name="sys_min_add_date" _method="GreaterThanOrEqual">
                                   	 至
                                    <input type="text" class="easyui-datebox w95 easyui-validatebox"  id= "id2" data-options="validType:['compareDatess','compareDatess[\'id1\',\'id2\']']" name="sys_max_add_date" _method="LessThanOrEqual">
                                </span>
                            </li>
                            <li>
                                <span>栏目名称：</span>
                                <span>
                                    <select class="select-input ipt-w94" name="sys_class_id" _method="Equal">
                                    	<option value="-1">请选择</option>
                                    	#foreach( $!{column} in $!{columns} )
                                    	<option value="$!{column.acId}">$!{column.acName}</option>
                                    	#end
                                    </select>
                                </span>
                            </li>
                            
                        </ul>
                        <div class="fl search-div">
                           <a class="btns btns-primary wheight SearchHide" id="Search" href="#">搜索</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div id="toolbar">
            #showButton
        </div>
        <table id="ArticleManagementGrid" toolbar="#toolbar" class="GridView regionTable"></table>
    </div>
</div>
<script type="text/javascript" src="/Js/P2PSystemManage/ArticleManageListView.js"></script>

