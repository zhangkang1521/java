	                    <div class="redUseScopes">
	                        #if($loanCategories)
	                        	#foreach( $loanCategory in $loanCategories) 
	                        		<input type="checkbox" name="redUseScope" value="$loanCategory.category" class="redUseScope" />$loanCategory.prompt
